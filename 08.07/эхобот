import telebot
bot = telebot.TeleBot('7295273118:AAEfL0FmNqIiyWbhjXhz_xK1sIh586ZjknU')






#функция start
@bot.message_handler(commands=["start"])
def start(m, res=False):
    bot.send_message(m.chat.id, 'Я на связи. Напиши мне что-нибудь )')
    
#Получение сообшений от юзера
@bot.message_handler(content_types=["text"])
def handle_text(message):
    #bot.send_message(message.chat.id, 'Вы написали: ' + message.text + str(len(message.text)))
   # for a in range(len(message.text)):
        #bot.send_message(message.chat.id,message.text[a])
        
    if message.text == 'Привет':
        bot.send_message(message.chat.id,  'Привет')
    if message.text == 'Ку':
        bot.send_message(message.chat.id,  'Привет')
    if message.text == 'шутка':
        bot.send_message(message.chat.id,  'давид лох')
#Запускаем бота
bot.polling(none_stop=True, interval=0)




    

